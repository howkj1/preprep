  for thing in $RETVAL
    do
    case $thing in
        # 1.) echo "mac menu goes here"; whiptail --title "cutom menu" --msgbox "goes here" 10 50;;
      1.)  sudo apt update;;
      2.)  installGit;;
      3.)  gitstuffdir;;
